{
  "extends": ["plugin:lit/recommended", "ub"],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "ecmaFeatures": {}
  },
  "rules": {
    "lit/no-invalid-html": "warn",
    "no-warning-comments": ["warn", { "terms": ["todo"] }],
    "require-atomic-updates": "off"
  },
  "env": {
    "node": true
  }
}
