{
  "name": "sdk-application-bundle",
  "version": "0.0.29",
  "description": "ubio sdk application bundle (prototype)",
  "module": "build.js",
  "scripts": {
    "install": "rimraf web_modules && vendor-copy && node hack-wrap.js",
    "start:broadband": "node domain-selector BroadbandSignup && npm run serve",
    "start:pet": "node domain-selector PetInsurance && npm run serve",
    "start:hotel": "node domain-selector HotelBooking && npm run serve",
    "start": "npm run serve",
    "serve": "browser-sync start --index 'index.html' --server --files 'index.css' 'index.js' 'templates' 'web_modules' 'src/' 'ubio.config.js'",
    "build": "npm run build:rollup && npm run build:js && npm run build:clean-up && npm run build:css",
    "build:rollup": "rollup --config",
    "build:js": "browserify bundle.js -o build.js -t babelify",
    "build:clean-up": "rm bundle.js",
    "build:css": "postcss src/css/index.css -o index.css",
    "stylelint": "stylelint src/css/**/* --fix",
    "check": "eslint --ext=js ."
  },
  "pre-commit": [
    "check",
    "stylelint"
  ],
  "keywords": [
    "ubio",
    "sdk"
  ],
  "author": "ubio",
  "license": "ISC",
  "dependencies": {
    "@ubio/sdk": "^0.5.0",
    "camelcase-keys": "^5.2.0",
    "form-serialize": "^0.7.2",
    "lit-html": "^1.1.0",
    "lodash.kebabcase": "^4.1.1",
    "rimraf": "^2.6.3",
    "vendor-copy": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.5",
    "browserify": "^16.2.3",
    "eslint": "^5.16.0",
    "eslint-config-ub": "^3.0.0",
    "eslint-plugin-lit": "^1.0.0",
    "postcss": "^7.0.16",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "pre-commit": "^1.2.2",
    "rollup": "^1.13.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  },
  "vendorCopy": [
    {
      "from": "node_modules/lit-html",
      "to": "web_modules/lit-html"
    },
    {
      "from": "node_modules/@ubio/sdk/index.js",
      "to": "web_modules/@ubio/sdk.js"
    }
  ],
  "hack-wrap": [
    "form-serialize",
    "camelcase-keys",
    "lodash.kebabcase"
  ]
}
