{
  "name": "sdk-application-bundle",
  "version": "0.0.7",
  "description": "ubio sdk application bundle (prototype)",
  "module": "build.js",
  "scripts": {
    "install": "pika-web && node hack-wrap.js",
    "start": "npm run serve",
    "serve": "browser-sync start --index 'index.html' --server --files 'index.css' 'index.js' 'templates' 'web_modules' 'src/' 'ubio.config.js'",
    "watch:css": "watch 'npm run build:css' css",
    "watch:js": "watch 'npm run build:rollup && npm run build:js && npm run build:clean-up' templates",
    "build": "npm run build:rollup && npm run build:js && npm run build:clean-up && npm run build:css",
    "build:rollup": "rollup --config",
    "build:js": "browserify bundle.js -o build.js -t babelify",
    "build:clean-up": "rm bundle.js",
    "build:css": "postcss css/index.css -o index.css",
    "stylelint": "stylelint css/**/* index.css --fix",
    "check": "eslint --ext=js ."
  },
  "pre-commit": [
    "check",
    "build",
    "stylelint"
  ],
  "keywords": [
    "ubio",
    "sdk"
  ],
  "author": "ubio",
  "license": "ISC",
  "dependencies": {
    "@pika/web": "^0.4.2",
    "@ubio/sdk": "^0.5.0",
    "camelcase-keys": "^5.2.0",
    "form-serialize": "^0.7.2",
    "lit-html": "^1.1.0",
    "lodash.kebabcase": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "babelify": "^10.0.0",
    "browser-sync": "^2.26.5",
    "browserify": "^16.2.3",
    "eslint": "^5.16.0",
    "eslint-config-ub": "^3.0.0",
    "eslint-plugin-lit": "^1.0.0",
    "postcss": "^7.0.16",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "pre-commit": "^1.2.2",
    "rollup": "^1.13.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.1",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0",
    "watch": "^1.0.2"
  },
  "@pika/web": {
    "webDependencies": [
      "lit-html",
      "@ubio/sdk"
    ]
  },
  "hack-wrap": [
    "form-serialize",
    "camelcase-keys",
    "lodash.kebabcase"
  ]
}
