{
  "name": "sdk-application-bundle",
  "version": "0.0.29",
  "description": "ubio sdk application bundle (prototype)",
  "module": "bundle.js",
  "main": "bundle.umd.js",
  "repository": "github:universalbasket/sdk-application-bundle",
  "scripts": {
    "install": "rimraf web_modules && vendor-copy && node hack-wrap.js",
    "start": "npm run serve",
    "build": "npm run build:rollup && npm run build:umd && npm run build:css",
    "build:rollup": "rollup --config",
    "build:umd": "rollup -n UBIO_BUNDLE -f umd bundle.js | babel -f bundle.umd.js > bundle.umd.js",
    "build:css": "postcss src/css/index.css -o index.css",
    "stylelint": "stylelint src/css/**/* --fix",
    "check": "eslint --ext=js .",
    "test": "npm run test:ui",
    "test:ui": "jest",
    "test:watch": "jest --watchAll",
    "test:update": "jest --updateSnapshot",
    "serve": "browser-sync start --index 'index.html' --server --files 'templates' 'web_modules' 'src'"
  },
  "pre-commit": [
    "check",
    "stylelint",
    "test"
  ],
  "keywords": [
    "ubio",
    "sdk"
  ],
  "bin": "./generator.js",
  "author": "ubio",
  "license": "ISC",
  "dependencies": {
    "@ubio/sdk": "^0.6.1",
    "camelcase-keys": "^6.0.0",
    "currency-symbol-map": "^4.0.4",
    "form-serialize": "^0.7.2",
    "lit-html": "^1.1.0",
    "lodash.kebabcase": "^4.1.1",
    "pwa-helpers": "^0.9.1",
    "recursive-copy": "^2.0.10",
    "replace-in-files": "^1.1.4",
    "rimraf": "^2.6.3",
    "vendor-copy": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "autoprefixer": "^9.6.0",
    "babel-jest": "^24.8.0",
    "browser-sync": "^2.26.7",
    "eslint": "^5.16.0",
    "eslint-config-ub": "^3.0.0",
    "eslint-plugin-lit": "^1.0.0",
    "jest": "^24.8.0",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.2",
    "postcss-import": "^12.0.1",
    "pre-commit": "^1.2.2",
    "rollup": "^1.15.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.2",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0"
  },
  "vendorCopy": [
    {
      "from": "node_modules/lit-html",
      "to": "web_modules/lit-html"
    },
    {
      "from": "node_modules/@ubio/sdk/index.js",
      "to": "web_modules/@ubio/sdk.js"
    }
  ],
  "hack-wrap": [
    "form-serialize",
    "camelcase-keys",
    "lodash.kebabcase",
    "pwa-helpers/media-query",
    "currency-symbol-map"
  ]
}
